<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% let totalBelanja = 0%>
    <table border="1" style="text-align: center;">
        <tr>
            <th>No.</th>
            <th>Nama</th>
            <th>Harga</th>
            <th>---</th>
        </tr>
        <%data.forEach((el, idx) => {%>
            <tr>
                <td><%=idx + 1%></td>
                <td><%=el.name%></td>
                <td><%=el.price%> <%totalBelanja += el.price%></td>
                <td>
                    <a href="/products/<%=el.id%>/cart/delete"><button>delete</button></a>
                </td>
            </tr>
        <%})%>
    </table>
    <br><br>
    <h3>Total Belanja : <%=totalBelanja%></h3>
    <a href="/products/cart/purchase">
        <button>Bayar</button>
    </a>
    <a href="/products/">
        <button>Kembali</button>
    </a>
</body>
</html>